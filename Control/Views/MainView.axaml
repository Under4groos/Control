<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Control.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Control.Views.MainView"
             x:DataType="vm:MainViewModel"
			  
			 
			 >
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="Margin" Value="2"/>
		</Style>
	</UserControl.Styles>
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>
	<Grid>
	 
		<Button Name="_button_refresh"  Tag="getdevice" Content="Refresh" HorizontalAlignment="Stretch" VerticalAlignment="Top" Foreground="White" Background="#4d4d4d"/>

		<ScrollViewer Margin="0,40,0,0">
			<StackPanel Name="_list" Background="Transparent">
				 
			</StackPanel>
		</ScrollViewer>
	</Grid>


</UserControl>
