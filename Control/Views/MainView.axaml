<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Control.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Control.Views.MainView"
             x:DataType="vm:MainViewModel"
			 Background="#1e1e1e"
			 
			 >
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="Margin" Value="2"/>
		</Style>
	</UserControl.Styles>
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>
	<Grid>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Name="_stack">	
			<Button Tag="getdevice" Content="Refresh"/>
		</StackPanel>
		<ListBox Name="_list" Margin="0,40,0,0" Padding="10,0,10,10">
			<ListBox.Styles>
				<Style Selector="ListBoxItem">
					<Setter Property="Padding" Value="0,2,0,2"/>
					<Setter Property="Margin" Value="0"/>
				</Style>
			</ListBox.Styles>
		</ListBox>
	</Grid>


</UserControl>
